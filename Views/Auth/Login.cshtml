@{
    ViewBag.Tittle = "Portal de Configuraciones";
}

﻿<style>

    body{
        background-color: #093C5D;
    }
    .submit {
    font-family: 'Bahnschrift SemiBold';
    font-style: normal;
    width: 100%;
    height: 40px;
    background: #B70000;
    border: none;
    border-radius: 10px;
    color: #d2d2d2;
    margin-bottom: 16px;
}
 .submit:hover{
     color: #d2d2d2;
     background-color: #093C5D;
 }
 .submit:active{
     color: #d2d2d2;
     background-color: #093C5D;
 }
    .form-control {
    font-family: 'Bahnschrift SemiBold';
    font-style: normal;
    font-style: normal;
    color: black;
    width: 100%;
    border: 2px solid #093C5D;
    margin-bottom: 15px;
    padding: 11px 10px;
    background: #d2d2d2;
    font-size: 14px;
    font-weight: bold;
    border-radius: 10px;
}
    .form-login {
    width: 400px;
    height: 340px;
    background: #d2d2d2;
    margin: auto;
    margin-top: 2%;
    margin-bottom: 8%;
    box-shadow: 7px 13px 37px #000;
    padding: 20px 30px;
    border-top: 4px solid #017bab;
    color: white;
    border-radius: 10px;
}

.form-login h5 {
    margin: 0;
    text-align: center;
    height: 40px;
    margin-bottom: 30px;
    border-bottom: 1px solid;
    font-size: 20px;
    color: #093C5D;
}
.InfoCuadroLogin{
    font-family: 'Bahnschrift SemiBold';
    font-style: normal;
    color:#093C5D;

}
</style>
        <body>
        <form asp-controller="auth" asp-action="login" method="post" class="form-login">


        <h5>Iniciar sesión.</h5>
        
        <label class="InfoCuadroLogin">E-Mail: </label>
        <input class="form-control" type="email" name="email" id="email" placeholder="example123@example.com" required/>
        <label class="InfoCuadroLogin">Password: </label>
        <input class="form-control" type="password" name="pass" id="pass" placeholder="••••••••••" required/>
        <input class="submit" type="submit" value="Ingresar.">
        <br/>

</form>
        </body>

        <!--Alert Box referente a la falla del inicio de sesión-->
@if(ViewBag.msg != null) {
        
    <div class="alert" id="VentanaModal"> 
       <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5>Error</h5>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger"> 
                        <h6><strong>@ViewBag.msg</strong></h6>
                    </div>
                </div>
            </div>
        </div>
    </div>

    //</div>


}