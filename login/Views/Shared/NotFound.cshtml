@if(!string.IsNullOrEmpty(ViewBag.Message))
{
    <input type="hidden" value="@ViewBag.Message" id="errorMessage"/>
}

<style>
        .container {
            position: relative;
            color: #494949;
            background-color: #fff;
        }
        
        .container .content-page-not-found {
            margin-top: 50px;
            position: absolute;
            left: 50%;
            transform: translate(-50%, 0);
            padding: 20px;
            width: 95%;
            box-shadow: 2px 5px 5px 1px #00000033;
            text-align: center;
            border-radius: 5px;
        }
        
        .container .content-page-not-found h1 {
            font-weight: 900;
            font-size: 55pt;
            margin-bottom: 50px;
        }
        
        .container .content-page-not-found h1 i {
            font-size: 30px;
        }
        
        .container .content-page-not-found h3 {
            margin-bottom: 10px;
        }
        
        #animated-icon {
            font-size: 50pt;
            position: absolute;
            animation-name: moveIcon;
            animation-duration: 5s;
            animation-iteration-count: infinite;
            text-shadow: 2px 6px 8px #0f0f0f57;
        }
        
        @@keyframes moveIcon {
            0% { left: 0; top: 0; }
            25% { left: 100%; top: 0; }
            50% { left: 100%; top: 100%; }
            75% { left: 0; top: 100%; }
            100% { left: 0; top: 0; }
        }
    </style>
    <div class="container">
        <div class="content-page-not-found">
            <h1><i class="bi bi-search"></i>&nbsp;404</h1>
            <h3>No se ha encontrado la página</h3>
            <p>Al parecer la página que estas solicitando no se ha encontrado o acualmente se encuentra deshabilitada.</p>
            <i id="animated-icon" class="bi bi-search"></i>
        </div>
    </div>

<script type="text/javascript">
    if ($('#errorMessage').val().length > 10) {
            ShowToastMessage('error', "Enlace de actualizacón no válido o expirado", @ViewBag.Message)
        }
</script>