@using login.Models.Entities
@{
    UpdateData dataUpdate = TempData["userDataUpdate"] as UpdateData;
}
<style>
    .container {
        text-align: center;
        margin-top: 10px;
        color: #272727;
    }

        .container .header-content {
            padding: 5px;
            text-align: left;
            margin: auto;
        }

        .container .content-form {
            padding: 15px;
            margin: auto;
            box-shadow: 2px 2px 10px 1px #00000033;
            border-radius: 5px;
            margin: auto;
        }

            .container .content-form .row {
                align-items: center;
            }

                .container .content-form .row .col img {
                    object-fit: cover;
                    max-height: 250px;
                }

                .container .content-form .row .col .mb-3 {
                    position: relative;
                }

                    .container .content-form .row .col .mb-3 button {
                        position: absolute;
                        top: 45%;
                        right: 0;
                        border: none;
                        font-size: 18px;
                        color: #a1a1a1;
                        transition: all .3s;
                    }

                    .container .content-form .row .col .mb-3 label {
                        margin-buttom: 0;
                    }

                    .container .content-form .row .col .mb-3 button:hover {
                        color: #272727;
                        text-shadow: 2px 2px 2px #0f0f0f57
                    }

                .container .content-form .row .col .btn {
                    border: none;
                }

                .container .content-form .row .col .btn-back-login {
                    background-color: #0000000c;
                }

    @@media screen and (max-width:1005px) {
        .container .content-form .row .col img {
            max-width: 250px;
        }
    }

    @@media screen and (max-width:600px) {
        .container .content-form .row {
            flex-direction: column;
        }

            .container .content-form .row .col img {
                max-width: 300px;
            }
    }
</style>
<div class="container">
    <div class="header-content">
        <h3 class="text-center">Actualización de contraseña</h3>
    </div>
    <div class="content-form">
        <div class="row">
            <p>A continuación, puedes ingresar una nueva contraseña para tu cuenta en @dataUpdate.ProjectName</p>
            <div id="alert-toast" style="position: fixed; top: 20px;" class="toast align-items-center text-bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body"></div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
            <div class="col" id="dataFormContent" style="position: relative;">
                <div id="box-update-pass" class="d-flex justify-content-center visually-hidden" style="position: absolute; top: 0; left: 50%; transform: translate(-50%, 0); z-index: 100; width: 100%; height: 100%; background-color: #d1d1d1d3; border-radius: 5px;">
                    <div class="spinner-border" role="status" style="margin-top: 50px;">
                        <span class="visually-hidden"></span>
                    </div>
                    <p style="margin-top: 50px;">&nbsp;&nbsp;Actualizando contraseña...</p>
                </div>
                <div class="form-content-update">
                    <input type="hidden" value="@dataUpdate.Email" id="email-restore" />
                    <input type="hidden" value="@dataUpdate.Token" id="token-restore" />
                    <input type="hidden" value="@dataUpdate.TokenJwt" id="tokenJwt-restore"/>
                    <input type="hidden" value="@dataUpdate.ProjectName" id="projectName-restore"/>
                    <div class="mb-3">
                        <label for="newPassword" class="form-label">Nueva contraseña:</label>
                        <input type="password" class="form-control" id="newPassword" placeholder="Nueva contraseña">
                        <button class="btn" onclick="showHidePass()" title="Ver - Ocultar contraseña">
                            <i id="pass1" class="bi bi-eye-slash-fill icon-password"></i>
                        </button>
                    </div>
                    <div class="mb-3">
                        <label for="passwordConfirm" class="form-label">Confirma tu contraseña:</label>
                        <input type="password" class="form-control" id="passwordConfirm" placeholder="Confirma tu contraseña">
                        <button class="btn" onclick="showHidePass()" title="Ver - Ocultar contraseña">
                            <i id="pass2" class="bi bi-eye-slash-fill icon-password"></i>
                        </button>
                    </div>
                    <p class="text-bg-danger" style="border-radius: 5px; font-weight: 600;"><small id="warning-message"></small></p>
                    <a href="/" class="btn btn-back-login"><i class="bi bi-arrow-up-left"></i>&nbsp;Iniciar sesión</a>
                    <button id="buttonUpdatePass" class="btn btn-primary" disabled><i class="bi bi-check-circle-fill"></i>&nbsp;Actualizar</button>
                </div>
            </div>
            <div class="col">
                <img src="@dataUpdate.ImageProject" alt="@dataUpdate.ProjectName" title="@dataUpdate.ProjectName" />
            </div>
        </div>
    </div>
</div>