﻿<style>
body{
    background-color: #093C5D;
}
</style>
@{
    ViewData["Title"] = "Login";
}

@if(ViewBag.msg != null) {
    <div class="alert" id="VentanaModal"> 
       <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5>Error</h5>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger"> 
                        <h6><strong>@ViewBag.msg</strong></h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<form asp-controller="auth" asp-action="login" method="post" class="form-login">
    <h5>Iniciar sesión</h5>
    <img src="~/img/main-logo.jpg" alt="IT-Seekers image"/>
    <br />
    <label for="email" class="label-form">Correo Electrónico: </label>
    <input class="form-control" type="email" name="email" id="email" placeholder="Correo Electrónico" required/>
    <label for="pass" class="label-form">Contraseña: </label>
    <input class="form-control" type="password" name="pass" id="pass" placeholder="Contraseña" required/>
    <input class="btn submit" type="submit" value="Ingresar">
    <br/>
</form>

