@using ITS_Middleware.Models.Entities
@model Proyecto 

<form id="registerProjectForm">
    <input type="hidden" asp-for="Id"/>
        <div class="mb-3">
            <label for="nombre" class="label-form">Nombre:</label>
            <div class="input-group flex-nowrap">
                <span class="material-icons input-group-text" id="addon-wrapping">grid_view</span>
                <input class="form-control" asp-for="Nombre" id="Nombre" placeholder="Nombre" />
            </div>
        </div>
        <div class="mb-3">
            <label for="Descripcion" class="label-form">Descripción:</label>
            <div class="input-group flex-nowrap">
                <span class="material-icons input-group-text" id="addon-wrapping">assignment</span>
                <input class="form-control" id="Descripcion" asp-for="Descripcion" placeholder="Descripcion" />
            </div>
        </div>
        <div class="mb-3">
            <label for="TipoCifrado" class="label-form">Tipo de cifrado:</label>
            <select id="TipoCifrado" asp-for="TipoCifrado" class="form-select" aria-label="cifrado">
                <option value="sha-256">SHA-256</option>
                <option value="aes-256">AES-256</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="MetodoAutenticacion" class="label-form">Metodo de autenticación:</label>
            <select id="MetodoAutenticacion" asp-for="MetodoAutenticacion" class="form-select" aria-label="autenticacion">
                <option value="SSO">Cifrado de autenticación SSO</option>
                <option value="Oauth2-0">Cifrado de autenticación Oauth2.0</option>
                <option value="JWT">JsonWebToken</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="Usuario" class="label-form">Usuario:</label>
            <div class="input-group flex-nowrap">
                <span class="material-icons input-group-text" id="addon-wrapping">account_circle</span>
                <input class="form-control" id="Usuario" asp-for="Usuario" placeholder="Usuario" />
            </div>
        </div>
        <div class="mb-3">
            <label for="Pass" class="label-form">Contrase&ntilde;a:</label>
            <div class="input-group flex-nowrap">
                <span class="material-icons input-group-text" id="addon-wrapping">vpn_key</span>
                <input class="form-control" type="password" id="Pass" asp-for="Pass" placeholder="Contrase&ntilde;a"/>
            </div>
        </div>
</form>

<script src="~/js/ProjectScripts.js" asp-append-version="true"></script>
