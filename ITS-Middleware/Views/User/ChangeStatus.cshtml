@using ITS_Middleware.Models.Entities
@model Usuario

<form id="updateStatusUserForm">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="FechaAlta">
        <input type="hidden" asp-for="Activo" id="Activo">
        <input type="hidden" asp-for="Email">
        <input type="hidden" asp-for="Pass">
        <input type="hidden" asp-for="Puesto"/>
        <input type="hidden" id="Nombre" asp-for="Nombre"/>
        <div class="alert alert-warning text-center" role="alert">
          Se <strong id="action-update"></strong> el usuario <strong id="userName"></strong>.
        </div>
 </form>

<script type="text/javascript">
    $('#userName').append($('#Nombre').val())
    if ($('#Activo').val() == "True") {
        $('#action-update').append("Desactivará")
    } else {
        $('#action-update').append("Activará")
    }
</script>

<script src="~/js/userScripts.js" asp-append-version="true"></script>