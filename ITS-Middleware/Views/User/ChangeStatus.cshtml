@using ITS_Middleware.Models.Entities
@model Usuario

<form id="updateStatusUserForm">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="FechaAlta">
        <input type="hidden" asp-for="Pass">
        <input type="hidden" asp-for="Activo" id="Activo">
        <input type="hidden" id="Puesto" asp-for="Puesto"/>
        <input type="hidden" id="Email" asp-for="Email"/>
        <p class="text-warning">Se <strong id="action-update"></strong> el usuario</p>
        <div class="mb-3">
            <label for="nombre" class="label-form">Nombre:</label>
            <input class="form-control" name="Nombre" asp-for="Nombre" readonly/>
        </div>
 </form>

<script type="text/javascript">
    if ($('#Activo').val() || $('#Activo').val() == true) {
        $('#action-update').append("Desactivará")
    } else {
        $('#action-update').append("Activará")
    }
</script>

<script src="~/js/userScripts.js" asp-append-version="true"></script>