@using ITS_Middleware.Models.Entities
@model Usuario

<form id="updateUserForm">
        <input type="hidden" asp-for="Id"/>
        <input type="hidden" asp-for="FechaAlta"/>
        <input type="hidden" asp-for="Activo"/>
        <div class="mb-3">
            <label for="nombre" class="label-form">Nombre:</label>
            <div class="input-group flex-nowrap">
                <span class="material-icons input-group-text" id="addon-wrapping">account_circle</span>
                <input class="form-control" asp-for="Nombre" id="Nombre" placeholder="Nombre" required/>
            </div>
        </div>
        <div class="mb-3">
            <label for="puesto" class="label-form">Puesto:</label>
            <div class="input-group flex-nowrap">
                <span class="material-icons input-group-text" id="addon-wrapping">badge</span>
                <input class="form-control" id="Puesto" asp-for="Puesto" placeholder="Puesto" required/>
            </div>
        </div>
        <div class="mb-3">
            <label for="email" class="label-form">Correo electrónico:</label>
            <div class="input-group flex-nowrap">
                <span class="material-icons input-group-text" id="addon-wrapping">email</span>
                <input class="form-control" id="Email" asp-for="Email" placeholder="Correo electrónico" required/>
            </div>
        </div>
        <div class="mb-3">
            <label for="pass" class="label-form">Contrase&ntilde;a:</label>
            <div class="input-group flex-nowrap">
                <span class="material-icons input-group-text" id="addon-wrapping">vpn_key</span>
                <input class="form-control" type="password" asp-for="Pass" id="Pass" value="0000000000" placeholder="Contrase&ntilde;a" />
                <span class="material-icons input-group-text" id="btn-action-pass">visibility_off</span>
            </div>
        </div>
        <button type="button" class="btn btn-generate-pass" onClick="getPassword()">Generar contrase&ntilde;a</button>
</form>

<script src="~/js/userScripts.js" asp-append-version="true"></script>
<script src="~/js/passControlScript.js" asp-append-version="true"></script>
