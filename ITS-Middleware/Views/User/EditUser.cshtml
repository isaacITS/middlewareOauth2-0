@using ITS_Middleware.Models.Entities
@model Usuario

<form id="updateUserForm">
        <input type="hidden" asp-for="Id" name="Id"/>
        <input type="hidden" asp-for="FechaAlta" name="FechaAlta"/>
        <input type="hidden" asp-for="Activo" name="Activo"/>
        <div class="mb-3">
            <label for="nombre" class="label-form">Nombre:</label>
            <input class="form-control" name="Nombre" asp-for="Nombre" id="Nombre" placeholder="Nombre" required/>
        </div>
        <div class="mb-3">
            <label for="puesto" class="label-form">Puesto:</label>
            <input class="form-control" id="Puesto" asp-for="Puesto" name="Puesto" placeholder="Puesto" required/>
        </div>
        <div class="mb-3">
            <label for="email" class="label-form">Correo electrónico:</label>
            <input class="form-control" id="Email" asp-for="Email" name="Email" placeholder="Correo electrónico" required/>
        </div>
        <div class="mb-3">
            <label for="pass" class="label-form">Contrase&ntilde;a:</label>
            <input class="form-control" type="password" asp-for="Pass" name="Pass" id="Pass" placeholder="*************" />
        </div>
</form>

<script src="~/js/userScripts.js" asp-append-version="true"></script>