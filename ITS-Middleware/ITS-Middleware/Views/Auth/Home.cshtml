@if (ViewBag.email == null)
{
    <h1 class="text-danger">Login to access</h1>
}
else
{
    <div class="container">
    <div class="row">
        <div class="col-md-4">
            <h1>Portal de Configuración</h1>
        </div>
        <div class="col-md-4">
            <p>Hola @ViewBag.email </p>
        </div>
        <div class="col-md-4">
            <a class="btn btn-danger" asp-controller="auth" asp-action="logout">Logout</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h3>Usuarios</h3>
            <form>
                <label for="nombre" class="label-form">Nombre:</label>
                <input class="form-control" id="nombre" placeholder="Nombre"/>
            </form>
        </div>
        <div class="col-md-6">
            <h3>Proyectos</h3>
            <form>
                <label for="pr-nombre" class="label-form">Nombre de proyecto:</label>
                <input class="form-control" id="pr-nombre" placeholder="Nombre de proyecto"/>
            </form>
        </div>
    </div>
</div>
}